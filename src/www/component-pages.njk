---
layout: layout.njk
pagination:
    data: components
    alias: component
    size: 1
permalink: "{{ component.name | slug }}/"
templateEngineOverride: njk,md
eleventyComputed:
  title: "{{ component.name }}"
  isExperimental: {{ component.isExperimental }}
  description: "{{ component.description }}"
---

{% if component.isExperimental %}
  <span class="badge badge--warning">Experimental</span>
{% endif %}

{{ component.description }}

{% include 'component-code.njk' %}

{% if component.props %}
## Properties

| Attribute | Type | Default | Description |
| --- | ---| --- | --- |
{% for prop in component.props %} | `{{ prop.attr }}` | `{{ prop.type }}` | {{ prop.default }} |  {{ prop.docs }} |
{% endfor %}
{% endif %}

{% if component.whenToUse %}
## When to use this component
{{ component.whenToUse }}
{% endif %}

{% if component.whenNotToUse %}
## When not to use this component
{{ component.whenNotToUse }}
{% endif %}

{% if component.usedBy %}
## Used by
{{ component.usedBy }}
{% endif %}

{% if component.research %}
## Research
{{ component.research }}
{% endif %}